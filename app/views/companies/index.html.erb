<div class="span12">
<div class="row">
  <div class="span4">
    <div class="row">
      <div class="span3 well">
        <h3> Filter Companies </h3>
    <form class="form-inline mini" style="margin-bottom: 0px;">
          <fieldset>
            <div class="row">
              <div class="span3">
                <div class="control-group">
                  <label for="companyFilter" class="control-label"><h4>by name</h4></label>
                  <div class="controls">
                    <p id="companyFilter"></p>
                  </div>
                </div>  
              </div>
            </div>
            <div class="row">
              <div class="span3">
                <div class="control-group">
                  <label for="employeeFilter" class="control-label"><h4>by # employees</h4></label>
                  <div class="controls">
                    <p id="employeeFilter"></p>
                  </div>
                </div>  
              </div>
            </div>
            <div class="row">
              <div class="span3">
                <div class="control-group">
                  <label for="foundedFilter" class="control-label"><h4>by year founded</h4></label>
                  <div class="controls">
                    <p id="foundedFilter"></p>
                  </div>
                </div>  
              </div>
            </div>
          </fieldset>
        </form>      </div>
    </div>
  </div>

  <div class="span8">
  	<h1>Listing companies</h1>
  	<%= render 'table' %>
  </div>
</div>
</div>