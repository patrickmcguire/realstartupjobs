<h1>Listing companies</h1>

<div class="span9">
	<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="companytable" width='100%'>
  	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Funding</th>
		<th>Employees</th>
		<th># of jobs</th>
  	</thead>

	<tbody>
		<% @companies.each do |company | %>
			<tr>
  				<td><a href='<%= company.url %>'> <%= company.name %></a></td>
				<td><%= company.description %></td>
				<td><%= company.funding %></td>
				<td><%= company.founded %></td>
				<td><%= company.jobs.count %></td>
			</tr>
		<% end %>
	</tbody>
	<tfoot>
		<th>Name</th>
		<th>Description</th>
		<th>Funding</th>
		<th>Employees</th>
		<th> # of jobs </th>
	</tfoot>	
</table>

