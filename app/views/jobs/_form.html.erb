<%= semantic_form_for @job, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :company_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :company_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :title, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :url, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :technical, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :technical, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :internship, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :internship, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_updated, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :last_updated, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                jobs_path, :class => 'btn' %>
  </div>
<% end %>
